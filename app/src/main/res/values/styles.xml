<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTabItem" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/horizon_main</item>
    </style>

    <style name="Button.blue" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/horizon_main</item>
    </style>

    <style name="CustomFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">mini</item>
        <item name="android:minWidth">45sp</item>
        <item name="android:minHeight">45sp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="maxImageSize">26dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item> <!-- Уровень затемнения -->
    </style>
</resources>